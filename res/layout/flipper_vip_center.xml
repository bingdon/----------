<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3" >

        <ImageView
            android:id="@+id/vip_userhead_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/bing" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vip_userhead_img"
            android:layout_alignTop="@+id/vip_userhead_img"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/vip_userhead_img" >

	<TextView
	    android:id="@+id/vip_id_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="卡号:88888"
	    android:textColor="@color/black9" />

	<TextView
	    android:id="@+id/yue_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	     android:textColor="@color/black9"
	    android:text="余额：100RMB" />

	<TextView
	    android:id="@+id/jifen_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="true"
	     android:textColor="@color/black9"
	    android:text="积分：200" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vip_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" >

        <ImageView
            android:id="@+id/vip_info_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/vip_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/vip_info_img"
             android:textColor="@color/black9"
            android:text="@string/info" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_book_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
        
        <ImageView
            android:id="@+id/vip_user_book_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher" />
        
        <TextView
            android:id="@+id/vip_user_book_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/vip_user_book_img"
             android:textColor="@color/black9"
            android:text="@string/user_book" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/vip_past_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
        
        <ImageView
            android:id="@+id/vip_past_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher" />
        
        <TextView
            android:id="@+id/vip_past_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/vip_past_img"
             android:textColor="@color/black9"
            android:text="@string/user_past" />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/vip_daijinquan_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2" >
        
        <ImageView
            android:id="@+id/vip_daijinquan_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher" />
        
        <TextView
            android:id="@+id/vip_daijinquan_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/vip_daijinquan_img"
             android:textColor="@color/black9"
            android:text="@string/daijinquan" />
        
    </RelativeLayout>

</LinearLayout>
